# PowerDNS configuration for SPF Guru remote backend

# Launch remote backend
launch=remote
# remote-connection-string=http:url=http://backend:8000
remote-connection-string=http:url=http://host.docker.internal:4080

# DNS settings
local-address=0.0.0.0
local-port=53

# API settings (optional, for debugging)
api=yes
api-key=changeme
webserver=yes
webserver-address=0.0.0.0
webserver-port=8081
webserver-allow-from=0.0.0.0/0

# Logging
loglevel=6
log-dns-queries=yes
log-dns-details=yes

# Performance
cache-ttl=60
query-cache-ttl=60

# Security
allow-axfr-ips=
disable-axfr=yes